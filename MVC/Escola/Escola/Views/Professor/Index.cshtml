@using Escola.Entidades
@{
    var professores = ViewData["professores"] as List<Professor>;
}


<div class="row">
    <div class="col-12">
        <a type="button" asp-action="Nova" asp-controller="Professor" class="btn btn-primary float-right">Novo Professor</a>
    </div>
</div>
<br />
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nome</th>
            <th scope="col">Colégio</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>

        @{
            foreach (var professor in professores)
            {
                <tr>
                    <th scope="row">@professor.Id</th>
                    <td>@professor.Nome</td>
                    <td>@professor.Colegio.Nome</td>
                    <td>
                        <a href="Professor/Editar/@professor.Id"><i class="bi-pencil" alt="Editar" style="padding-right:10px;"></i></a>
                        <i class="bi-x-circle" alt="Excluir" onclick="Excluir(@professor.Id)"></i>
                    </td>
                </tr>
            }
        }




    </tbody>
</table>
