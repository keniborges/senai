@using Escola.Entidades
@model Escola.Models.ProfessorModel


<form asp-action="Nova">

    <div class=" form-row">
        <input type="hidden" asp-for="Id">
        <div class="form-group col-md-12">
            <label for="staticEmail" class="col-form-label">Nome do Professor</label>
            <input type="text" class="form-control" placeholder="Nome da Escola" asp-for="Nome" />
            @Html.ValidationMessageFor(m => m.Nome, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-12">
            <label class="col-form-label">Selecione a Escola</label>
            <select class="form-control" asp-for="ColegioId" asp-items="@ViewBag.Colegios">
                @*@{
                    foreach (var colegio in colegios)
                    {
                        <option value="@colegio.Id">@colegio.Nome</option>
                    }
                }*@
            </select>
        </div>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Salvar</button>

</form>
